@model IEnumerable<LoginCadastroMVC.Models.Patient>

@{
    ViewBag.Title = "Pacientes";
}

<style scoped>
    .patients-list-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        max-width: 1000px;
        margin: 0 auto;
        padding: 40px 0;
    }

    .patients-table {
        background-color: #222;
        padding: 30px;
        border-radius: 16px;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .patient-card {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        background-color: #333;
        color: white;
        padding: 20px;
        border-radius: 12px;
        width: 100%;
        justify-content: space-between;
    }

    .patient-info {
        flex: 1 1 300px;
        min-width: 200px;
    }

    .patient-name {
        font-size: 20px;
        font-weight: bold;
    }

    .patient-dob {
        font-size: 16px;
        color: #ccc;
    }

    .patient-actions {
        display: flex;
        gap: 10px;
        flex: 0 0 auto;
    }

    .btn-custom {
        padding: 10px 16px;
        border: none;
        border-radius: 20px;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
        color: white;
    }

    .btn-edit {
        background-color: #d6aa6d;
    }

    .btn-delete {
        background-color: #e3bfc1;
        color: black;
    }

    .btn-create {
        background-color: #4CAF50;
        padding: 12px 20px;
        border-radius: 20px;
        font-size: 16px;
        color: white;
        text-decoration: none;
    }

    .search-container {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 10px;
    }

    .search-form {
        display: flex;
        gap: 10px;
        width: 100%;
        flex: 1;
    }

    .search-input {
        flex: 1;
        padding: 12px 15px;
        border-radius: 25px;
        border: none;
        background-color: #333;
        color: white;
        font-size: 16px;
    }

        .search-input::placeholder {
            color: #888;
        }

    .search-button {
        background-color: #d6aa6d;
        padding: 12px 20px;
        border-radius: 25px;
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }
</style>

<div class="patients-list-container">
    <h2>@ViewBag.Title</h2>

    <div class="search-container">
        @using (Html.BeginForm("Index", "Patient", FormMethod.Get, new { @class = "search-form" }))
        {
            <input type="text" name="searchString" class="search-input" placeholder="Pesquisar por nome..." value="@ViewBag.CurrentFilter" />
            <button type="submit" class="search-button">Pesquisar</button>
        }

        <a href="@Url.Action("Create", "Patient")" class="btn-create">Cadastrar Novo Paciente</a>
    </div>

    <div class="patients-table">
        @if (Model.Any())
        {
            foreach (var patient in Model)
            {
                <div class="patient-card">
                    <div class="patient-info">
                        <div class="patient-name">@patient.Name</div>
                        <div class="patient-dob">@patient.DateOfBirth?.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="patient-actions">
                        <a href="@Url.Action("Edit", "Patient", new { id = patient.ID })" class="btn-custom btn-edit">Editar</a>
                        <a href="@Url.Action("Delete", "Patient", new { id = patient.ID })" class="btn-custom btn-delete">Excluir</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="color:white; text-align:center; font-size:18px;">Nenhum paciente encontrado com os critérios de pesquisa.</div>
        }
    </div>
</div>
