@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jose_Rodriguez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jose_Rodriguez.styles.css" asp-append-version="true" />
    <link href="~/css/management.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #191917;">
            <div class="container d-flex align-items-center justify-content-between">
             
                <a class="navbar-brand d-flex align-items-center" href="#home">
                    <img src="~/img/logo.png" alt="Logo"
                         style="max-height: 80px; object-fit: contain; margin-right: 10px;" />
                </a>

              
                <button class="navbar-toggler p-1 btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

      
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="@Url.Action("Index", "Home")#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#antes_depois">Antes e Depois</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#historia">História</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#depoimentos">Depoimentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#location">Localização</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-light" href="#agendamento">Agendamento</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-light" href="#privacy">Contato</a>
                        </li>

                        @if (Context.Session.GetString("AdminLogado") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Painel">Painel Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>

            
                <div class="d-none d-lg-flex align-items-center gap-4 mr-4">
                    <a href="#privacy" class="btn btn-outline-light rounded-pill px-3 py-1"
                       style="border-color: #d4af37; color: #d4af37;">
                        Contato
                    </a>
                </div>
                <div class="d-none d-lg-flex align-items-center gap-2">
                    <a href="#agendamento" class="btn rounded-pill px-3 py-1"
                       style="background-color: #d4af37; color: #111; font-weight: 500;">
                        Marque já a vossa consulta
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Jose_Rodriguez - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>