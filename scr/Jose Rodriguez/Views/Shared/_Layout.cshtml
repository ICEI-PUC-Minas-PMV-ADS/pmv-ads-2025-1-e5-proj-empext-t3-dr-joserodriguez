@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jose_Rodriguez</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jose_Rodriguez.styles.css" asp-append-version="true" />
    <link href="~/css/management.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <!-- Marca / logo, se quiser -->
                <a class="navbar-brand" href="#home">Jose_Rodriguez</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <!-- Cada link rola até a seção correspondente no Index.cshtml -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#antes_depois">Antes e Depois</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#historia">História</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#depoimentos">Depoimentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#location">Localização</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#agendamento">Agendamento</a>
                        </li>

                        @if (Context.Session.GetString("AdminLogado") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Painel">Painel Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" href="#privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Jose_Rodriguez - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>