@{
    ViewData["Title"] = "Painel Administrativo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-container {
        display: flex;
        min-height: calc(100vh - 200px);
        color: white;
        margin-top: -20px;
    }

    .admin-photo {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

        .admin-photo img {
            max-width: 90%;
            max-height: 90%;
            object-fit: cover;
            border-radius: 10px;
            clip-path: inset(0 0 0 0 round 0 50% 50% 0);
        }

    .admin-panel {
        flex: 1;
        padding: 40px;
        background-color: #000;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .admin-panel h1 {
            color: white;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .admin-panel h2 {
            color: #C6A16F;
            font-size: 1.5rem;
            margin-bottom: 40px;
        }

    .admin-button {
        display: block;
        width: 100%;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #C6A16F;
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: background-color 0.3s;
        cursor: pointer;
    }

        .admin-button:hover {
            background-color: #d4b584;
            color: white;
            text-decoration: none;
        }

        .admin-button:last-child, .create-patient {
            background-color: #ff8ba7;
        }

            .admin-button:last-child:hover, .create-patient:hover {
                background-color: #ffa3b9!important;
            }
</style>

<div class="admin-container">
    <div class="admin-photo">
        <img src="~/img/IMG_0705.jpeg" alt="Dr. José Rodriguez" />
    </div>
    <div class="admin-panel">
        <h1>Painel Administrativo</h1>
        <h2>Dr. José Rodriguez</h2>

        <a href="/Patient/Index" class="admin-button">Lista de Pacientes</a> <!-- Alterado para Index -->
        <a href="/Dentistas/Index" class="admin-button">Lista de Dentistas</a> 
        <a href="/Patient/Create" class="admin-button create-patient">Agendar Paciente</a>
        <a href="/Patient/Management" class="admin-button">Gerenciamento de Agenda</a>
    </div>
</div>