@{
    ViewData["Title"] = "Tela Home";
}

<style>
    /* CSS integrado na view */
    body {
        min-height: 100vh; /* Faz a altura mínima da página ser a altura da janela */
        margin: 0;
        overflow-x: hidden; /* Impede rolagem horizontal */
    }

    .service-icon {
        width: 70px;
        height: 70px;
        line-height: 70px;
        border-radius: 50%;
        background-color: #d4af37; /* Fundo dourado para os ícones */
        margin: 0 auto;
        color: white; /* Cor branca no ícone */
        font-size: 30px;
    }

    .card {
        border-radius: 10px;
        transition: all 0.3s ease;
        border: 1px solid #d4af37; /* Borda dourada */
        background-color: #f7f1d7; /* Fundo dourado claro */
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            background-color: #d4af37; /* Fundo dourado quando passar o mouse */
        }

    .details-content {
        margin-top: 15px;
        margin-bottom: 15px;
        text-align: left;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .saiba-mais {
        transition: all 0.3s ease;
        border-color: #d4af37; /* Cor dourada na borda */
        color: #d4af37; /* Cor dourada no texto */
    }

        .saiba-mais:hover {
            background-color: #d4af37; /* Fundo dourado no hover */
            color: white; /* Texto branco no hover */
        }

    .preview-text {
        min-height: 50px;
    }

    .video-container {
        position: relative;
        padding-bottom: 56.25%; /* Proporção 16:9 */
        height: 0;
        overflow: hidden;
        max-width: 100%;
        margin-bottom: 50px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 10px;
            border: none;
        }

    .section-title {
        position: relative;
        margin-bottom: 30px;
        padding-bottom: 15px;
        text-align: center;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: #d4af37; /* Linha dourada abaixo do título */
        }

    /* Ajustes para o carrossel */
    #carouselServicos {
        max-height: 600px; /* Limita a altura do carrossel */
        overflow-y: auto;
    }

    .carousel-item {
        min-height: 300px; /* Define uma altura mínima para os itens do carrossel */
    }

    /* Ajustes para as setas de navegação do carrossel */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #d4af37; /* Cor das setas douradas */
        border-radius: 50%; /* Torna as setas arredondadas */
    }

    /* Estilo das setas para garantir visibilidade */
    .carousel-control-prev,
    .carousel-control-next {
        background-color: rgba(0, 0, 0, 0.3); /* Fundo semitransparente para as setas */
    }

    /* Estilos de texto nos cards */
    .card-text {
        color: #6c6c6c; /* Cor do texto mais suave */
    }

    .card-title {
        color: #333; /* Cor escura para o título */
    }

    /* Botões */
    .btn-outline-primary {
        border-color: #d4af37; /* Borda dourada no botão */
        color: #d4af37; /* Cor dourada no texto do botão */
    }

        .btn-outline-primary:hover {
            background-color: #d4af37; /* Fundo dourado no hover */
            color: white; /* Texto branco no hover */
        }

    /* Destaque para o card */
    .highlight-card {
        transform: scale(1.05); /* Aumenta ligeiramente o card */
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Sombra mais forte para destacar */
        border-color: #f39c12; /* Cor dourada mais intensa na borda */
    }
</style>

<!-- Seção de Vídeo -->
<div class="row mb-5">
    <div class="col-12">
        <div class="video-container">
            <video width="100%" autoplay muted loop playsinline>
                <source src="/img/home.mp4" type="video/mp4">
                Seu navegador não suporta a exibição de vídeos.
            </video>
        </div>
    </div>
</div>

<!-- Título da Seção de Carrossel -->
<div class="section-title">
    <h2>Conheça nossos tratamentos</h2>
</div>

<!-- Seção de Carrossel de Cards -->
<div id="carouselServicos" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Primeira página de cards -->
        <div class="carousel-item active">
            <div class="row">
                <!-- Clínica Geral -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-tooth"></i>
                            </div>
                            <h4 class="card-title">Clínica Geral</h4>
                            <p class="card-text preview-text">Procedimentos básicos e preventivos para manter sua saúde bucal.</p>
                            <div class="details-content" id="details-1" style="display: none;">
                                <p>A Clínica Geral é a base de todos os tratamentos odontológicos...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="1">Saiba Mais</button>
                        </div>
                    </div>
                </div>

                <!-- Endodontia -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-syringe"></i>
                            </div>
                            <h4 class="card-title">Endodontia</h4>
                            <p class="card-text preview-text">Tratamento de canal para dentes com infecção ou dor.</p>
                            <div class="details-content" id="details-2" style="display: none;">
                                <p>A Endodontia é a especialidade responsável pelo tratamento de canal...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="2">Saiba Mais</button>
                        </div>
                    </div>
                </div>

                <!-- Periodontia -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-tooth"></i> <!-- Ícone de dente atualizado -->
                            </div>
                            <h4 class="card-title">Periodontia</h4>
                            <p class="card-text preview-text">Tratamento das gengivas e estruturas de suporte dos dentes.</p>
                            <div class="details-content" id="details-3" style="display: none;">
                                <p>A Periodontia trata das doenças que afetam os tecidos que dão suporte aos dentes...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="3">Saiba Mais</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Segunda página de cards -->
        <div class="carousel-item">
            <div class="row">
                <!-- Ortodontia -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-teeth"></i>
                            </div>
                            <h4 class="card-title">Ortodontia</h4>
                            <p class="card-text preview-text">Alinhamento dos dentes e correção da mordida.</p>
                            <div class="details-content" id="details-4" style="display: none;">
                                <p>A Ortodontia é a especialidade que corrige o posicionamento dos dentes...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="4">Saiba Mais</button>
                        </div>
                    </div>
                </div>

                <!-- Implantodontia -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-tooth"></i>
                            </div>
                            <h4 class="card-title">Implantodontia</h4>
                            <p class="card-text preview-text">Reposição de dentes perdidos com implantes de titânio.</p>
                            <div class="details-content" id="details-5" style="display: none;">
                                <p>A Implantodontia é a área responsável pela reposição de dentes perdidos...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="5">Saiba Mais</button>
                        </div>
                    </div>
                </div>

                <!-- Prótese Dentária -->
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="service-icon mb-3">
                                <i class="fas fa-teeth-open"></i>
                            </div>
                            <h4 class="card-title">Prótese Dentária</h4>
                            <p class="card-text preview-text">Reabilitação com próteses fixas ou removíveis.</p>
                            <div class="details-content" id="details-6" style="display: none;">
                                <p>A Prótese Dentária é a especialidade dedicada à reabilitação oral...</p>
                            </div>
                            <button class="btn btn-outline-primary saiba-mais" data-id="6">Saiba Mais</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Controles do Carrossel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselServicos" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselServicos" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.saiba-mais').click(function () {
                var id = $(this).data('id');
                var detailsDiv = $('#details-' + id);
                var card = $(this).closest('.card'); // Encontrar o card correspondente

                // Se o conteúdo já está visível, esconda-o
                if (detailsDiv.is(':visible')) {
                    detailsDiv.slideUp();
                    $(this).text('Saiba Mais');
                    card.removeClass('highlight-card'); // Remove o destaque do card
                } else {
                    // Mostra o conteúdo e adiciona o destaque ao card
                    detailsDiv.slideDown();
                    $(this).text('Ocultar');
                    card.addClass('highlight-card'); // Adiciona a classe de destaque
                }
            });
        });
    </script>
}
