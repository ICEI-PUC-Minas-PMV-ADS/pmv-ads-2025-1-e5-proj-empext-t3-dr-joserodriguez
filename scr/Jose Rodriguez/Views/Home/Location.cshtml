@model Jose_Rodriguez.Models.ContactViewModel
@{
    ViewData["Title"] = "Localização";
    Layout = null;
}
<br />
<h2>Contacte-nos para obter mais informações</h2>
<br />

<div class="d-flex justify-content-center">
    <div class="row w-100">
        <div class="col-md-4">
            <div class="card p-4 shadow">
                <h4>Entre em Contato</h4>
                <form asp-action="Location" method="post">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Mensagem" class="form-label">Mensagem</label>
                        <textarea asp-for="Mensagem" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Mensagem" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Enviar Mensagem</button>
                </form>

                @if (ViewBag.MensagemEnviada != null)
                {
                    <div class="alert alert-success mt-3">Mensagem enviada com sucesso!</div>
                }
                else if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger mt-3">Erro ao enviar mensagem. Tente novamente mais tarde.</div>
                }
            </div>
        </div>

        <div class="col-md-8 d-flex justify-content-center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3180.5974347307483!2d-8.0258401!3d37.1384914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd1ab13de91b6659%3A0xa18058cd57e80db6!2sR.%20do%20Matadouro%2023%2C%208100-689%20Loul%C3%A9%2C%20Portugal!5e0!3m2!1spt-BR!2sbr!4v1748468411504!5m2!1spt-BR!2sbr"
                    width="800" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}