@model SeuProjeto.Models.Dentista

@{
    ViewData["Title"] = "Delete";
}

<style scoped>
    .delete-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 800px;
        margin: 80px auto;
        padding: 80px 40px;
        gap: 40px;
        color: white;
        background-color: #333;
        border-radius: 16px;
        text-align: center;
    }

    .delete-title {
        font-size: 40px;
        font-weight: bold;
    }

    .delete-subtitle {
        font-size: 20px;
        color: #ccc;
    }

    .dentist-info {
        display: flex;
        flex-direction: column;
        gap: 12px;
        font-size: 18px;
    }

    .dentist-info span {
        color: #d6aa6d;
        font-weight: bold;
    }

    .delete-actions {
        display: flex;
        gap: 30px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-custom {
        padding: 14px 28px;
        border: none;
        border-radius: 24px;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
        color: white;
        min-width: 150px;
    }

    .btn-delete {
        background-color: #e74c3c;
    }

    .btn-cancel {
        background-color: #e3bfc1;
        color: black;
    }
</style>

<div class="delete-container">
    <div class="delete-title">Excluir Dentista</div>
    <div class="delete-subtitle">Tem certeza que deseja excluir este dentista? Após a exclusão não será possível recuperar os dados do dentista.</div>
    
    <div class="dentist-info">
        <div>Nome: <span>@Model.Nome</span></div>
        <div>Email: <span>@Model.Email</span></div>
        <div>Telefone: <span>@Model.Telefone</span></div>
        <div>Cédula Profissional: <span>@Model.Cedula</span></div>
    </div>
    
    <form asp-action="Delete" class="delete-actions">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-custom btn-delete">Sim, Excluir</button>
        <a href="@Url.Action("Index", "Dentistas")" class="btn-custom btn-cancel">Cancelar</a>
    </form>
</div>