@model IEnumerable<SeuProjeto.Models.Dentista>

@{
    ViewBag.Title = "Dentistas";
}

<link rel="stylesheet" href="~/css/indexdentista.css" />


<div class="dentistas-list-container">
    <h2>@ViewBag.Title</h2>

    <div class="search-container">
        <div class="search-form-wrapper">
            @using (Html.BeginForm("Index", "Dentistas", FormMethod.Get, new { @class = "search-form" }))
            {
                <input type="text" name="searchString" class="search-input" placeholder="Pesquisar por nome, cédula ou email..." value="@ViewBag.CurrentFilter" />
                <button type="submit" class="search-button">Pesquisar</button>
            }

            <a href="@Url.Action("Create", "Dentistas")" class="btn-create">Cadastrar Novo Dentista</a>
        </div>
    </div>

    <div class="dentistas-table">
        @if (Model.Any())
        {
            foreach (var dentista in Model)
            {
                <div class="dentista-card">
                    <div class="dentista-info">
                        <div class="dentista-nome">@dentista.Nome</div>
                        <div class="dentista-cedula">Cédula: @dentista.Cedula</div>
                        <div class="dentista-email">Email: @dentista.Email</div>
                        <div class="dentista-telefone">Telefone: @dentista.Telefone</div>
                    </div>

                    <div class="dentista-actions">
                        <a href="@Url.Action("Edit", "Dentistas", new { id = dentista.Id })" class="btn-custom btn-edit">Editar</a>
                        <a href="@Url.Action("Delete", "Dentistas", new { id = dentista.Id })" class="btn-custom btn-delete">Excluir</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-results">
                Nenhum dentista encontrado com os critérios de pesquisa.
            </div>
        }
    </div>
</div>