@model SeuProjeto.Models.Dentista

@{
    ViewData["Title"] = "Cadastro de Dentista";
}

<style scoped>
    .container-create-dentist {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 40px;
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        min-height: 100vh;
    }

    .profile-pic-create {
        flex: 1 1 300px;
        max-width: 400px;
        aspect-ratio: 1;
        border-radius: 0 50% 50% 0;
        overflow: hidden;
    }

    .profile-pic-create img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .form-create-dentist {
        flex: 1 1 300px;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        gap: 5px;
        padding: 20px;
    }

    .form-title-create-dentist {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 12px;
    }

    select, input, textarea {
        background-color: transparent;
        border: none;
        border-bottom: 1px solid #6c757d;
        color: white;
        font-size: 1rem;
        padding: 20px 0px 4px 0px;
        width: 100%;
        box-sizing: border-box;
    }

    select:focus, input:focus, textarea:focus {
        outline: none;
    }

    .buttons-container {
        display: flex;
        gap: 10px;
        margin-top: 50px;
    }

    .button-create-dentist {
        padding: 12px;
        border: none;
        border-radius: 20px;
        font-size: 1rem;
        cursor: pointer;
        flex: 1;
        transition: transform 0.2s ease, background-color 0.2s ease;
    }

    .save-create-dentist {
        background-color: #d6aa6d;
        color: white;
    }

    .cancel-create-dentist {
        background-color: #e3bfc1;
        color: black;
    }

    .validation-error {
        color: red;
        font-size: 14px;
    }

    @@media screen and (max-width: 768px) {
        .container-create-dentist {
            flex-direction: column;
            padding: 15px;
            gap: 30px;
        }

        .profile-pic-create {
            max-width: 280px;
            border-radius: 50%;
            margin: 0 auto;
        }

        .form-create-dentist {
            padding: 15px;
            max-width: 100%;
        }

        .form-title-create-dentist {
            font-size: 1.7rem;
        }
    }

    @@media screen and (max-width: 480px) {
        .container-create-dentist {
            padding: 10px;
            gap: 20px;
        }

        .profile-pic-create {
            max-width: 200px;
        }

        .form-title-create-dentist {
            font-size: 1.5rem;
        }

        select, input, textarea {
            font-size: 0.95rem;
            padding: 10px 6px;
        }

        .buttons-container {
            flex-direction: column;
            gap: 8px;
        }

        .button-create-dentist {
            padding: 10px;
        }
    }
</style>

<div class="container-create-dentist">
    <div class="profile-pic-create">
        <img src="~/img/IMG_0752.jpeg">
    </div>

    <form asp-action="Create" class="form-create-dentist">
        <div class="form-title-create-dentist">Cadastro de Dentista</div>

        <div>
            <input asp-for="Nome" placeholder="Nome Completo" />
            <span asp-validation-for="Nome" class="validation-error"></span>
        </div>

        <div>
            <input asp-for="Telefone" placeholder="Número de Telefone" />
            <span asp-validation-for="Telefone" class="validation-error"></span>
        </div>

        <div>
            <input asp-for="Email" placeholder="E-mail" type="email" />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div>
            <input asp-for="Cedula" placeholder="Cédula Profissional" />
            <span asp-validation-for="Cedula" class="validation-error"></span>
        </div>

        <div class="buttons-container">
            <button type="submit" class="button-create-dentist save-create-dentist">Cadastrar</button>
            <button type="button" class="button-create-dentist cancel-create-dentist" onclick="window.location.href='/dentistas/index'">Cancelar</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}