@model SeuProjeto.Models.Dentista
@{
    ViewBag.Title = "Editar Dentista";
}
<link rel="stylesheet" href="~/css/editardentista.css" />

<div class="container-edit-patient">
    <div class="profile-pic-edit">
        <img src="~/img/IMG_0752.jpeg" alt="Foto do Dentista">
    </div>
    
    <form asp-action="Edit">
        <div class="form-edit-patient">
            <div class="form-title-edit-patient">@ViewBag.Title</div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <input asp-for="Nome" placeholder="Nome Completo" />
                <span asp-validation-for="Nome" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <input asp-for="Cedula" placeholder="Cédula Profissional" />
                <span asp-validation-for="Cedula" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <input asp-for="Telefone" placeholder="Telefone" />
                <span asp-validation-for="Telefone" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>
            
            <div class="button-group">
                <button type="submit" class="button-edit-patient save-edit-patient">Salvar</button>
                <button type="button" class="button-edit-patient cancel-edit-patient" onclick="window.location.href='/Dentistas/Index'">Cancelar</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}